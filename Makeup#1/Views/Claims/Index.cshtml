@using System.Security.Claims;
@model IEnumerable<Claim>
@{
    ViewData["Title"] = "Index";
}

<h2 class="bg-primary p-1 m-1 text-white" >User Claims</h2>
<a asp-action="Create" class="btn btn-secondary">Додати нове посвідчення</a>
<div class="text-danger" asp-validation-summary="All"></div>
<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Type</th>
            <th>Value</th>
            <th>ValueType</th>
            <th>Issuer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Claim claim in Model)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
                <td>@claim.ValueType</td>
                <td>@claim.Issuer</td>
                <td>
                    <form method="post" asp-action="Delete">
                        <input type="hidden" name="claimValues" value="@claim.Type;@claim.Value;@claim.Issuer" />
                        <button type="submit" class="btn btn-sm btn-outline-warning">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>  

