@using Microsoft.AspNetCore.Identity
@inject UserManager<User> userManager
@{
    bool isAdmin = false;
    if (User != null)
    {
        //User user = await userManager.FindByNameAsync(User..);
        //isAdmin = await userManager.IsInRoleAsync(user, "Admin");
        isAdmin = User.IsInRole("Admin");
    }
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://fonts.cdnfonts.com/css/montserrat" rel="stylesheet">
    <style>
        *,
        *::after,
        *::before {
            font-family: 'montserrat' sans-serif;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            height: 100%;
            min-height: 100vh;
            background-color: #F5F2ED;
        }

        main {
            flex-grow: 1;
            flex-shrink: 1;
        }

        /* ====================Header===================== */
        .CollapseContainer {
            flex-direction: column;
        }

        .headerStyle {
            background-color: #8d9890;
            padding: 2px !important;
        }

        .headerContainer {
            padding: 0 !important;
            margin: 0 !important;
            width: 100% !important;
        }

        .AllTopSide {
            display: flex;
            width: 100%;
            justify-content: space-between;
        }

        .header_button {
            display: flex;
            flex-wrap: nowrap;
            align-items: center;
            font-size: 14px;
        }

        .navMenu {
            display: flex;
            align-items: center !important;
        }

            .navMenu a {
                text-decoration: none;
                white-space: nowrap;
                color: white;
                padding: 5px;
                padding-right: 15px;
            }

        .dropSelect {
            height: fit-content !important;
        }

        .dropdown-toggle {
            padding: 0 !important;
            color: white !important;
        }

        .dropdown-menu.show {
            margin-top: 10px !important;
            display: flex !important;
            flex-direction: column !important;
        }

        .textDelivery {
            display: flex;
            align-items: center;
            white-space: nowrap;
            color: white;
            font-size: 14px;
            margin-left: auto;
            margin-right: 20px;
        }

        .textLanguage {
            display: flex;
            align-items: center;
            color: white;
            font-size: 14px;
        }

        .AllCenterSide {
            display: flex;
            width: 100%;
            padding: 5px;
            justify-content: space-around;
            align-items: center;
            border-top: 5px solid white;
            border-bottom: 5px solid white;
        }

        .Search span {
            color: white;
        }

        .AllBottomSide {
            display: flex;
            width: 100%;
            padding: 5px;
            justify-content: space-around;
        }

            .AllBottomSide span {
                color: white;
            }

            .AllBottomSide a {
                color: white;
                text-decoration: none;
            }

                .AllBottomSide a:hover {
                    color: #DDD;
                }

        /* header  */
        .footerStyle {
            background-color: #8d9890;
        }

        .colStyleLogo {
            display: flex;
            justify-content: center;
        }

        .colStyle1 {
            color: white;
            display: flex;
            flex-direction: column;
            font-size: 14px;
        }

        .colStyle2 {
            color: white;
            display: flex;
            flex-direction: column;
            font-size: 14px;
        }

        .colStyle3 {
            color: white;
            display: flex;
            flex-direction: column;
        }

        .info {
            font-size: 16px;
        }

        .number {
            font-size: 24px;
        }

        /* ====================Card===================== */
        .my-card {
            display: flex;
            flex-direction: column;
            height: 450px;
            position: relative;
        }

        .card-img {
            border-radius: 20px;
            width: 270px;
        }

        .card-text {
            text-transform: uppercase;
            font-weight: 500;
            text-align: center;
            flex-grow: 1;
            flex-shrink: 1;
        }

        .card-price {
            font-weight: 700;
            text-align: center;
            margin-bottom: auto;
            flex-grow: 0;
        }

        .bestseller-text {
            position: absolute;
            top: 25.4px;
            background-color: rgba(0, 0, 0, 0.5);
            color: #F5F2ED;
            padding: 3px;
            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;
        }

        .my-card-heart {
            position: absolute;
            left: 215px;
            top: 20.33px;
        }

        .card-link {
            text-decoration: none;
            color: black;
        }
        /* ====================Product Details===================== */
        .product-details{
            display: flex;
            flex-direction: column;
        }

    </style>
</head>

<body>
    <header class="App-header">
        <nav class="navbar navbar-expand-md headerStyle">
            <div class="container-fluid headerContainer">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#responsive-navbar-nav" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse CollapseContainer" id="responsive-navbar-nav">
                    <div class="container w-100">
                        <div class="AllTopSide">
                            <div class="navbar-nav header_button">
                                <div class="navMenu">
                                    <a class="nav-link" aria-current="page" href="#">Акції</a>
                                    <a class="nav-link" href="#">Доставка та оплата</a>
                                    <a class="nav-link" href="#">Блог</a>
                                    <a class="nav-link" aria-disabled="true">Про нас</a>
                                    <li class="nav-item dropdown dropSelect">
                                        <a class="nav-link dropdown-toggle" href="#" role="button"
                                           data-bs-toggle="dropdown" aria-expanded="false">
                                            Ще
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#">Action</a></li>
                                            <li><a class="dropdown-item" href="#">Another action</a></li>
                                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                                        </ul>
                                    </li>
                                </div>
                            </div>
                            <div class="textDelivery">
                                Безкоштовна доставка по Україні
                            </div>
                            <div class="textLanguage">
                                <span class="me-2">ENG</span>
                                <span>UA</span>
                            </div>
                        </div>
                    </div>
                    <div class="AllCenterSide">
                        <div class="Search">
                            <img/> <span>Я шукаю...</span>
                        </div>
                        <div class="brand">
                            <a class="navbar-brand" href="/home">
                                <img src="~/images/logo.svg" width="130">
                            </a>
                        </div>
                        <div class="icons">
                            <img src="~/images/user.png" width="25" class="me-2">
                        
                               
                            <a asp-action="Index" asp-controller="Cart"><img src="~/images/shopping.png" width="25" class="me-2"> </a>
                            <img src='~/images/heart.png' width="25">
                        </div>
                    </div>
                    <div class="AllBottomSide">
                        <span>BIO косметика</span>
                        <span>Волосся</span>
                        <span>Тіло і ванна</span>
                        <span>Макіяж</span>
                    </div>
                    @if (isAdmin)
                    {
                        <div class="AllBottomSide">
                            <a asp-controller="Categories" asp-action="Index">Categories</a>
                            <a asp-controller="Brands" asp-action="Index">Brands</a>
                            <a asp-controller="Products" asp-action="Index">Products</a>
                            <a asp-controller="Images" asp-action="Index">Images</a>
                            <a asp-controller="User" asp-action="Index">Users</a>
                            <a asp-controller="Role" asp-action="Index">Roles</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <main>
      @RenderBody()
    </main>
    <footer class="App-footer">
        <div class="container-fluid footerStyle">
            <div class="container footer">
                <div class="row rowFooter w-100 row-cols-1 row-cols-xl-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-2">
                    <div class="col colStyleLogo col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-5 mt-5">
                        <img src="images/footerlogo.svg" width="400"></img>
                    </div>
                    <div class="col colStyle1 col-12 col-xl-4 col-lg-4 col-md-4 col-sm-6">
                        <h4 className="mb-5">Каталог</h4>
                        <span className="mb-2">Bio косметика</span>
                        <span className="mb-2">Волосся</span>
                        <span className="mb-2">Тіло і ванна</span>
                        <span className="mb-2">Макіяж</span>
                    </div>
                    <div class="col colStyle2 col-12 col-xl-4 col-lg-4 col-md-4 col-sm-6">
                        <h4 className="mb-5">Клієнтам</h4>
                        <span className="mb-2">Доставка та оплата</span>
                        <span className="mb-2">Про нас</span>
                        <span className="mb-2">Політика конфіденційності</span>
                        <span className="mb-2">Обмін та повернення</span>
                    </div>
                    <div class="col colStyle3 col-12 col-xl-4 col-lg-4 col-md-4 col-sm-6">
                        <h4 className="mb-5">Контактна інформація</h4>
                        <span className="mb-2 info">
                            Ми із задоволенням допоможемо Вам у вирішенні будь-яких
                            питань!
                        </span>
                        <span className="mb-2 number">+380 123 12 23 23</span>
                        <span className="mb-2">ouremail.gmail.com</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
            @await RenderSectionAsync("Scripts", false)
</body>

</html>