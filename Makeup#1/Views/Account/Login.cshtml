@using Makeup_1.Models.ViewModels.AccountViewModels
@model LoginViewModel
@section PageStyles{
    <style>
        input[type="submit"], a {
            background-color: rgba(141, 152, 144, 1);
            border-radius: 5px;
            padding: 10px;
            color: rgba(217, 217, 217, 1);
            font-weight: 500;
            border: none;
        }
        a{
            text-decoration: none;
        }
    </style>
}
<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
    <div class="form-group">
        <label asp-for="Login"></label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="alert-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="alert-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsPersistent"></label>
        <input asp-for="IsPersistent" />
    </div>
    <input type="submit" value="Увійти" />
   @*  <a asp-controller="Account" asp-action="GoogleAuth" class="btn btn-info">LogIn With Google</a>
    <a asp-controller="Account" asp-action="FbAuth" class="btn btn-info">LogIn With Facebook</a> *@
</form>
<div>Ще не зареєстровані? <a asp-action="Register" asp-controller="Account">Зареєструватися</a></div>
